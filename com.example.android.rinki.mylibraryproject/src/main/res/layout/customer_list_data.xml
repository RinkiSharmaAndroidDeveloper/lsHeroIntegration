    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/breadcrumbs1"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center|top"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="15dp"
                android:padding="5dp"
                android:id="@+id/dot4"
                android:background="@drawable/red_circle"
                android:layout_height="15dp" />
            <View
                android:layout_width="wrap_content"
                android:background="@color/heroColorPrimary"
                android:layout_gravity="center"
                android:id="@+id/line3"
                android:layout_height="1dp"></View>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center|top"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="15dp"
                android:padding="5dp"
                android:id="@+id/dot5"
                android:background="@drawable/red_circle"
                android:layout_height="15dp" />
            <View
                android:layout_width="wrap_content"
                android:background="@color/heroColorPrimary"
                android:layout_gravity="center"
                android:id="@+id/line4"
                android:layout_height="1dp"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center|top"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="15dp"
                android:id="@+id/dot6"
                android:background="@drawable/red_circle"
                android:layout_height="15dp" />
            <View
                android:layout_width="wrap_content"
                android:background="@color/heroColorPrimary"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_height="1dp"></View>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="3"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#9b9b9b"
          android:layout_weight="1"
            android:id="@+id/txt4"
            android:layout_marginLeft="10dp"
            android:text="Bike Service In-Progress"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/txt5"
            android:layout_weight="1"
            android:textColor="#9b9b9b"

            android:layout_marginLeft="10dp"
            android:text="Bike Picked For
Delivery"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/txt6"
            android:layout_weight="1"
            android:textColor="#9b9b9b"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:text="Bike Delivered"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="#9b9b9b"
            android:text="VIN Number"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="#7d7d7d"
            android:id="@+id/registration_number"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="ls-12345"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="#9b9b9b"
            android:text="Service Charges"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="#7d7d7d"
            android:id="@+id/current_status_number"
            android:textStyle="bold"
            android:drawableLeft="@drawable/currency_inr"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="Current Status"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="#9b9b9b"
            android:text="Extra Km Charges"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="#7d7d7d"
            android:id="@+id/ls_amount"
            android:textStyle="bold"
            android:drawableLeft="@drawable/currency_inr"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="Current Status"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:clickable="true">
<LinearLayout
    android:layout_width="160dp"
    android:layout_height="50dp"
    android:background="@drawable/gray_circuler_back"
    android:gravity="center"
android:layout_marginLeft="10dp"

    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    android:id="@+id/google_map"
    android:clickable="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:adjustViewBounds="true"
             android:padding="7dp"

            android:src="@drawable/track_runner_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/textDark"
            android:text="Track Runner" />

</LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="@drawable/gray_circuler_back"
            android:layout_marginTop="10dp"

            android:layout_marginLeft="10dp"
            android:layout_height="50dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_height="50dp"
                android:src="@color/heroColorPrimary"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#151515"
                android:padding="5dp"
                android:layout_toRightOf="@+id/profile_image"
                android:text="Bane Doe"
                android:id="@+id/name"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/bs_call_customer"
                android:layout_width="40dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/name"
                android:layout_height="40dp"
                android:background="@drawable/gray_circuler_back"
                android:src="@drawable/phone_in_talk"

                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_below="@+id/name"
                android:padding="2dp"
                android:id="@+id/star"
                android:src="@drawable/star"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:padding="2dp"
                android:textColor="#ff0000"
                android:layout_below="@+id/name"
                android:layout_toRightOf="@+id/star"
                android:text="4.06 "
                android:id="@+id/rating"
                />
        </RelativeLayout>
        <Button
            android:layout_width="110dp"
            android:background="@drawable/background_btn"
            android:layout_marginLeft="10dp"
android:id="@+id/payment_btn"
            android:paddingRight="5dp"
            android:gravity="center"
            android:text="Payment"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"

            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_height="40dp" />
        <Button
            android:layout_width="110dp"
            android:background="@drawable/background_btn"
            android:id="@+id/feedBackbutton"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:text="Feedback"
            android:visibility="gone"
            android:layout_gravity="center|right"
            android:textAlignment="center"
            android:paddingLeft="5dp"
            android:textColor="@color/white"
            android:layout_height="40dp" />
    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/heroColorPrimary"
        android:orientation="horizontal"
        android:id="@+id/view_photos"
        android:layout_height="40dp">
        <TextView
            android:layout_width="match_parent"
            android:text="View Job card"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>