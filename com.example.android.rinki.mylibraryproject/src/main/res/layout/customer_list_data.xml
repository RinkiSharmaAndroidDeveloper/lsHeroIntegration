<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:background="#ffffff"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:id="@+id/rr1"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="110dp"
android:id="@+id/otp_txt"
        android:padding="2dp"
        android:visibility="gone"
        android:background="@drawable/background_btn"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/check"
        android:paddingRight="5dp"
        android:text="OTP 0909"
        android:drawablePadding="5dp"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:layout_height="30dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:id="@+id/ll1"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/grayColor"
        android:id="@+id/booking"
        android:text="Booking No. "
        />
    <TextView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:id="@+id/booking_txt"
android:layout_marginLeft="3dp"
        android:textColor="@color/black"
android:layout_toRightOf="@+id/booking"
        android:layout_marginRight="5dp"
        android:text="LS-2082-43578-2688532409"

        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
      android:layout_marginTop="15dp"
        android:layout_below="@+id/ll1"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/grayColor"
            android:id="@+id/booking_date"
            android:text="Booking Date"
            />
        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:id="@+id/date"
            android:layout_marginLeft="3dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/booking"
            android:layout_marginRight="5dp"
            android:text="LS-2082-43578-2688532409"

            />

    </LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rr1"
        android:layout_marginLeft="10dp"

         android:id="@+id/rr2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/model_txt"
            android:lineSpacingExtra="2.5sp"
            android:text="Honda"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/bike_number_txt"
            android:textColor="@color/black"
          android:layout_below="@+id/model_txt"
            android:lineSpacingExtra="2.5sp"
            android:text="CBR 250R Matte Black"
            />


    </RelativeLayout>
