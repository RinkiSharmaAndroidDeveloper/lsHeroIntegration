<resources>

    <!-- Base application theme. -->

    <style name="MyTheme" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>
    <style name="CircularProgress" parent="android:Theme.DeviceDefault">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="MyRatingBar" parent="@android:style/Widget.DeviceDefault.RatingBar.Indicator">
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="colorAccent">@color/heroColorPrimary</item>
        <item name="colorControlNormal">@color/grayColor</item>
        <item name="colorControlActivated">@color/heroColorPrimary</item>
    </style>

</resources>
